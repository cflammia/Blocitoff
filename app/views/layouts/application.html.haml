!!!
%html
  %head
    %title Bloccit
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      %ul
        %ul.nav.nav-tabs
          %li= link_to "Bloccit", welcome_index_path
          %li= link_to "About", welcome_about_path
        - if flash[:notice]
          .alert.alert-success
            %button.close{"data-dismiss" => "alert", :type => "button"} &times;
            = flash[:notice]
        - elsif flash[:error]
          .alert.alert-danger
            %button.close{"data-dismiss" => "alert", :type => "button"} &times;
            = flash[:error]
        - elsif flash[:alert]
          .alert.alert-warning
            %button.close{"data-dismiss" => "alert", :type => "button"} &times;
            = flash[:alert]
        = yield
